{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["es2017", "dom"],
        "rootDir": "src",
        "outDir": "lib",
        "sourceMap": true,
        "declaration": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": false,
        "downlevelIteration": true
    },
    "exclude": ["node_modules"],
    "include": ["src/*.ts"]
}
