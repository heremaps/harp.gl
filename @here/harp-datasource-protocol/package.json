        "csscolorparser": "^1.0.3"
    },
    "devDependencies": {
        "@here/harp-test-utils": "^0.21.0",
        "@types/chai": "^4.2.11",
        "@types/mocha": "^7.0.2",
        "chai": "^4.0.2",
        "cross-env": "^7.0.2",
        "mocha": "^7.2.0",
        "source-map-support": "^0.5.19",
